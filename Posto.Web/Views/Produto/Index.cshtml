@using Posto.ApplicationCore.ViewModels
@{
    IEnumerable<ProdutoVM> produtos = ViewBag.Produtos;
}
<input hidden id="mensagem" value="@ViewBag.mensagem" />
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Produtos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Configurações</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Produtos</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <button class="btn btn-primary dim" type="button" title="Novo Produto" onclick="NovoProduto()"><i class="fa fa-plus"></i></button>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover produtos">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ProdutoVM item in produtos)
                            {
                                <tr>
                                    <td>@item.Nome</td>
                                    <td style="width: 200px">
                                        <button class="btn btn-default btn-circle" type="button" title="Editar" onclick="EditarProduto(@item.Id_Produto,@item.Id_Serie)"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-danger btn-circle" type="button" title="Remover" onclick="RemoverProduto(@item.Id_Produto,@item.Id_Serie)"><i class="fa fa-trash"></i></button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>
@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/dataTables/datatables.min.js"></script>
        <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
        <script src="~/js/Tela/Produto/produto_index.js"></script>
    </environment>
}