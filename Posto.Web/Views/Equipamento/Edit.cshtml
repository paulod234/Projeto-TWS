@model Posto.ApplicationCore.ViewModels.EquipamentoVM
@using Posto.ApplicationCore.Enum;

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Editar Série</h5>
                <div class="ibox-tools">
                </div>
            </div>
            <div class="ibox-content">
                <form method="POST">
                    @Html.HiddenFor(s => s.Id_Equipamento)
                    @Html.HiddenFor(s => s.IdEmpresa)
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Modelo da Bomba</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(p => p.Modelo_Bomba, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.Modelo_Bomba, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Tipo</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.Tipo, new SelectList(Enum.GetValues(typeof(EnumTipoSerie))), "Selecione o tipo", new { @class = "select2" })
                            @Html.ValidationMessageFor(p => p.Tipo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Número de Série</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(p => p.Numero_Serie, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.Numero_Serie, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Ativo</label>
                        <div class="col-sm-10">
                            @Html.CheckBoxFor(p => p.Ativo, new { @class = "form-control align-left" })
                            @Html.ValidationMessageFor(p => p.Ativo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-sm btn-white" type="submit">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>