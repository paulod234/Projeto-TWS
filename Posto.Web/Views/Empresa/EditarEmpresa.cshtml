@page
@model Posto.ApplicationCore.ViewModels.EmpresaVM

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Editar Empresa</h5>
                <div class="ibox-tools">
                </div>
            </div>
            <div class="ibox-content">
                <form method="POST">
                    @Html.HiddenFor(p => p.IdEmpresa)
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Nome Fantasia</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(p => p.Nome, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Razao</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(p => p.Razao, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.Razao, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">CNPJ</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(p => p.CNPJ, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.CNPJ, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Ativo</label>
                        <div class="col-sm-10">
                            @Html.CheckBoxFor(p => p.Ativo, new { @class = "form-control align-left" })
                            @Html.ValidationMessageFor(p => p.Ativo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-sm btn-white" type="submit">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
